<div class='card'>
  <div class='card-img-top'>
    <img src='{{sprites.front_default}}' alt='{{name}}' />
  </div>
  <div class='card-body'>
    <h2 class='card-title'>{{name}}</h2>
    <p class='card-text'>{{weight}}</p>
    <p class='card-text'>{{height}}</p>
    <p class='card-text'><b>Вміння</b></p>
    {{#each abilities}}
      <ul class='clas-list-group'>
        <li class='clas-list-item'>{{ability.name}}</li>
      </ul>
    {{/each}}
  </div>
</div>